{
  "name": "html-email-preview",
  "displayName": "HTML Email Preview",
  "description": "Preview your HTML Emails across multiple devices and email clients directly in VS Code",
  "publisher": "H501Cloud",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:html-email-preview.setApiKey",
    "onCommand:html-email-preview.fetchDevices"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "html-email-preview.setApiKey",
        "title": "Set API Key"
      },
      {
        "command": "html-email-preview.fetchDevices",
        "title": "Show Preview"
      }
    ],
    "configuration": {
      "properties": {
        "html-email-preview.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for accessing your service"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  },
  "repository": {
  "type": "git",
  "url": "https://github.com/NeverVane/html-email-preview.git"
}

}
